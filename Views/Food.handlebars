<div class="menu-container">
  <div class="card-header col-md-12 text-center">
    <h2>
      &#127869 Food List
    </h2>
  </div>

{{!-- this handlebars gets its info from the home-route.js file in the controllers folder --}}
{{!-- the Foods const receied from html-routes GET path --}}
{{!-- Foods is an array of all your saved Foods so the template and html-route GET path is telling the page to render this html for every Food you have --}}
  {{#each Foods as |Food|}}
  <div class="Food col-md-4">
    <p>
      {{Food.id}}.
      {{Food.Food_name}}
    </p>
  </div>
  <div class="col-md-5">
    <p>
      Description:
      {{Food.description}}
    </p>
  </div>
  {{/each}}


  <!-- This is the form for adding a new dish -->
  <div class="add-Food-container">
    <h1>Search for a Food</h1>
    <input placeholder="search for Food by name"></input>
  <button>search</button>


    <br>
    <h2>
      Add a Food!
    </h2>
    <form class="new-Food-form">

      <label for="Food_name">
        Food Name:
      </label>
      <br />
      <textarea id="Food_name" name="Food_name" rows="2" cols="30">
      {{Food_name}}
    </textarea>
      <br />


      <label for="description">
        Description:
      </label>
      <br />
      <textarea id="description" name="description" rows="5" cols="30">
      {{description}}
    </textarea>
      <br />


      <label for="address">
        Address:
      </label>
      <br />
      <textarea id="address" name="address" rows="2" cols="30">
      {{address}}
    </textarea>
      <br />
      <br />


      <label for="phone">
        Phone:
      </label>
      <br />
      <textarea id="phone" name="phone" rows="2" cols="30">
      {{phone}}
    </textarea>
      <br />

      <label for="dob">
        DOB:
      </label>
      <br />
      <input type="text" id="dob" name="dob" rows="2" cols="30">
      {{dob}}
    </input>
      <br />


      <button type="submit" value="Submit">
        Submit
      </button>
    </form>
  </div>
</div>

<script src="/js/add-Food.js"></script>